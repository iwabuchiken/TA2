<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/dlg_filter_showlist_et_content"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:gravity="top|left"
        android:textSize="20sp" />

    <!-- REF Spacing http://stackoverflow.com/questions/12047369/how-to-set-border-of-gridview-on-android -->

    <GridView
        android:id="@+id/dlg_filter_showlist_gv"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@color/blue1"
        android:gravity="center_vertical"
        android:horizontalSpacing="5dp"
        android:numColumns="4"
        android:padding="5dp"
        android:verticalSpacing="5dp" >

    </GridView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/darkgreen"
        android:gravity="center_vertical|center_horizontal" >

        <ImageButton
            android:id="@+id/dlg_filter_showlist_bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
	            
	        style="@style/ib_basic_1"
            
            android:background="@color/green4"
            android:src="@drawable/general_ib_ok_green_64x64" />

        <ImageButton
            android:id="@+id/dlg_filter_showlist_bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/general_ib_ball_red_48x48" />

        <ImageButton
            android:id="@+id/dlg_filter_showlist_bt_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/green4"
            android:src="@drawable/general_ib_cancel_red_64x64" />

        <ImageButton
            android:id="@+id/dlg_filter_showlist_bt_clear"
            style="@style/ib_basic_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/green4"
            android:src="@drawable/general_ib_clear_yellow_64x64" />

    </LinearLayout>

</LinearLayout>