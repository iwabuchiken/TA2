<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actv_showlist_ll_base"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@android:id/list"
        
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        
        android:layout_weight="1"
		>
		
    </ListView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/green4"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/actv_showlist_ib_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/green4"
            android:src="@drawable/actv_showlist_bt_top_45x45" />

        <ImageButton
            android:id="@+id/actv_showlist_ib_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/green4"
            android:src="@drawable/actv_showlist_bt_up_50x50" />
    
        <ImageButton
            android:id="@+id/actv_showlist_ib_back"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@color/green4"
            android:src="@drawable/actv_memo_ib_back_49x37" />

        <ImageButton
            android:id="@+id/actv_showlist_ib_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/green4"
            android:src="@drawable/actv_showlist_bt_down_50x50" />

        <ImageButton
            android:id="@+id/actv_showlist_ib_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/green4"
            android:src="@drawable/actv_showlist_bt_bottom_45x45" />
            
    </LinearLayout>
    
    
</LinearLayout>