<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/actv_play_ll_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/green4"
        android:gravity="center" >

        <Button
            android:id="@+id/actv_play_bt_rec"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"

            android:text="@string/commons_lbl_rec"
			android:textSize="25sp"
			
			android:textColor="@color/blue1"
            
            
		 />

        <Button
            android:id="@+id/actv_play_bt_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/commons_lbl_stop"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/actv_play_bt_back"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"

            android:text="@string/commons_lbl_back"
            android:textSize="25sp"
		 />

    </LinearLayout>

</LinearLayout>